<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    tools:context="com.gmonetix.codercampy.ui.activity.CoursesActivity">

    <android.support.v7.widget.CardView
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        android:elevation="6dp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/back"
                app:mrl_rippleAlpha="0.1"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    app:srcCompat="@drawable/ic_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </com.balysv.materialripple.MaterialRippleLayout>


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/search_et"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:hint="What you want to learn today?"
                android:padding="8dp"
                android:textSize="14sp"
                android:layout_margin="6dp"
                android:textColor="@color/black"
                android:textColorLink="@color/black"
                android:maxLines="1"
                android:textColorHighlight="@color/colorPrimary"
                android:background="@color/white"
                android:layout_height="wrap_content" />

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/search_clear"
                android:visibility="gone"
                app:mrl_rippleAlpha="0.1"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    app:srcCompat="@drawable/ic_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </com.balysv.materialripple.MaterialRippleLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.balysv.materialripple.MaterialRippleLayout
            app:mrl_rippleAlpha="0.1"
            app:mrl_rippleHover="true"
            android:layout_gravity="end"
            app:mrl_rippleOverlay="true"
            android:background="@drawable/white_stroke_1dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/category_spinner"
                android:text="All"
                android:textColor="@color/white"
                android:drawablePadding="12dp"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_category_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.balysv.materialripple.MaterialRippleLayout>

        <android.support.v4.widget.Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <com.balysv.materialripple.MaterialRippleLayout
            app:mrl_rippleAlpha="0.1"
            app:mrl_rippleHover="true"
            android:layout_gravity="end"
            app:mrl_rippleOverlay="true"
            android:background="@drawable/white_stroke_1dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/language_spinner"
                android:text="All"
                android:textColor="@color/white"
                android:drawablePadding="12dp"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_code_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="6dp"
        android:id="@+id/courses_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
