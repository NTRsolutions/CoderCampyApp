<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    tools:context="com.gmonetix.codercampy.ui.fragment.RatingFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rating_recyclerView"
        android:layout_above="@+id/bottom"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        android:elevation="6dp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/course_rating"
                android:backgroundTint="@color/black"
                android:progressTint="@color/colorPrimary"
                android:secondaryProgressTint="@color/colorPrimary"
                android:progressBackgroundTint="@color/black"
                android:numStars="5"
                android:rating="3"
                android:stepSize="1"
                android:layout_gravity="center"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_marginTop="6dp"
                android:isIndicator="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/course_rating_et"
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:hint="How do you feel about this course?"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:layout_margin="6dp"
                    android:textColor="@color/black"
                    android:textColorLink="@color/black"
                    android:maxLines="5"
                    android:minLines="2"
                    android:inputType="textMultiLine"
                    android:textColorHighlight="@color/colorPrimary"
                    android:background="@color/white"
                    android:layout_height="wrap_content" />

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/course_rating_send"
                    app:mrl_rippleAlpha="0.1"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        app:srcCompat="@drawable/ic_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </com.balysv.materialripple.MaterialRippleLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
