<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/discussion_name"
            android:text="John Franklin"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/main_font"
            android:maxLines="1"
            android:layout_marginRight="50dp"
            android:background="@drawable/color_primary_rounded_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/discussion_time"
            android:text="12 days ago"
            android:textSize="12sp"
            android:layout_gravity="end|center"
            android:fontFamily="@font/main_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <TextView
        android:id="@+id/discussion_message"
        android:text="This course is really awesome."
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/main_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>